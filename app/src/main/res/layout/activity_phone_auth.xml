<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".LoginActivity">


    <EditText
        android:id="@+id/phoneET"
        style="@android:style/Widget.Material.EditText"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:layout_alignBaseline="@id/countyCodeET"
        android:hint="@string/phone_numberHint"
        android:inputType="phone"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHint="@color/coloHint"
        android:textSize="20sp"
        android:layout_toRightOf="@id/countyCodeET"/>

    <TextView
        android:id="@+id/verify_expTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneET"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="15dp"
        android:text="@string/instr"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Caption"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/genCodeBTN"
        style="@android:style/Widget.Material.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verify_expTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/phone_verify" />

    <EditText
        android:id="@+id/countyCodeET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="39dp"
        android:text="+92"
        android:textSize="20sp"
        android:textColor="@android:color/white"/>

</RelativeLayout>